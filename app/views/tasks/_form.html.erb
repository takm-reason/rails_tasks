<%= form_with(model: task, local: true, id: form_id ||= 'task-form') do |f| %>
  <div class="form-group">
    <%= f.label :title, 'タイトル' %>
    <%= f.text_field :title, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= f.label :description, '説明' %>
    <%= f.text_area :description, class: 'form-control', rows: 3 %>
  </div>

  <div class="form-group">
    <%= f.label :due_date, '期限' %>
    <%= f.datetime_local_field :due_date, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :priority, '優先度' %>
    <%= f.select :priority,
      Task.priority_values.map { |k, v| [k.to_s.humanize, v] },
      { selected: Task.priority_values[:medium] },
      { class: 'form-control' }
    %>
  </div>

  <%= f.submit submit_text ||= 'タスクを保存', class: 'btn btn-primary' %>
<% end %>